<main>
      <div class="row g-5">
          <div class="col-12 mx-5 p-5">
               <div class="card">
                     <div class="nav nav-tabs">       
                         {{#with navigation}}
                              {{#each links}}
                                   <div class="nav item">
                                        <a href="{{href}}" class="nav-link">{{text}}</a>
                                   </div>
                              {{/each}} 
                                   <div class="nav-item">
                                        <a href="#" class="nav-link disabled">Disabled</a>
                                   </div> 
                        {{/with}} 
                     </div>
               </div> 
          </div>
          <div class="col-12 mx-5 p-2">
               {{#with newsBlock}}
               <h2 class="text-center p-3">{{title}}</h2>
                <div class="row g-2">
               {{#each cards}}
               <div class="col-3">
                     <div class="card ">
                         <div class="card-body text-bg-dark">
                              <h6>{{title}}
                                    {{#if isTop}}
                                        <span class="badge text-bg-danger rounded-pill text-uppercase">Top</span>
                                    {{/if}}
                                     {{#if isNew}}
                                        <span class="badge text-bg-success rounded-pill text-uppercase">New</span>
                                    {{/if}}
                              </h6>
                              <p class="p-3">{{description}}</p>
                             
                         </div>
                     </div>
               </div>
               {{/each}}
                </div>
               {{/with}} 
          </div>
          <hr>
         
         <div class="col-12 mb-5 ms-5">
               <div class="nav nav-tabs">
                    {{#with goodsBlock}}
                         {{#each tabs}}
                              {{#if isActive}}
                                             <div class="nav-item">
                                             <a href="#" class="nav-link active">{{text}}</a>
                                             </div>
                              {{/if}}
                              {{#unless isActive}}{{#unless isDisabled}}
                              <div class="nav-item">
                                             <a href="#" class="nav-link">{{text}}</a>
                                             </div>
                              
                              {{/unless}}{{/unless}}
                              {{#if isDisabled}}
                                             <div class="nav-item">
                                             <a href="#" class="nav-link disabled">{{text}}</a>
                                             </div>
                              {{/if}}         
                         {{/each}}
                          <div class="row g-2">
                              {{#each cards}}
                                   <div class="card col-4 mt-5"> 
                                        <div class="row g-3"></div>
                                   <div class="card-body"> 
                                   <table class="table table-bordered ">
                                             <img class="card-img-top" src="{{image}}" alt="Product photo">
                                             <div class="card-title  p-3">{{title}}
                                                  {{#if isHot}}
                                                            <span class="badge text-bg-warning rounded-pill text-uppercase">HOT!</span>
                                                  {{/if}}
                                                  {{#if isNew}}
                                                            <span class="badge text-bg-info rounded-pill text-uppercase">New</span>
                                                  {{/if}}
                                             </div>
                                             <p class="p-2">{{description}}</p>
                                   </table>
                                   </div>
                                   </div>
                              {{/each}}
                    {{/with}}
                </div>
           </div>

           <hr class="mt-5">


            <div class="col-12 me-5 mt-5">
               {{#with subscribe}}
                       <div class="card col-12">
                       <div class="card-body text-bg-dark">
                             <h2>{{header}}</h2>
                             <p class="mt-3">{{description}}</p>
                              {{#each buttons}}
                              <div class="row">
                                   <div class="col-3 p-2">
                                   <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                                   </div>
                              </div>
                              {{/each}} 
                       </div>
                       </div>
                       
               {{/with}}
            </div>

            <hr class="mt-5">

          <div class="col-12 me-5 mt-5">
               {{#with service}}
                       <div class="card col-12">
                         <div class="card-body text-bg-success text-center">
                              <h2>{{title}}</h2>
                              <p class="mt-3">{{description}}</p>
                                   {{#each buttons}}
                                   <div class="row">
                                        <div class="text-center">
                                             <a class="btn btn-primary " href="{{link}}">{{text}}</a>
                                        </div>
                                   </div>
                                   {{/each}}
                         </div>
                       </div>
               {{/with}}
          </div>

</main>

 <hr class="mt-5">

          <div>     
                 <div class="nav">
                     {{#each footer}}
                         <div class="nav-item">
                              {{#each this}}  
                                   {{#if @last}}
                                        <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                                   {{else}}
                                        <a href="{{link}}" class="nav-link active">{{text}}</a>
                                   {{/if}}
                              {{/each}}
                         </div>
                     {{/each}}
          </div>