<main class="p-2">
      <div class="row g-5">
          <div class="col-12 ms-4 p-4">
               <div class="card">
                     <div class="nav nav-tabs">       
                         {{#with navigation}}
                              {{#each links}}
                                   <div class="nav item">
                                        <a href="{{href}}" class="nav-link">{{text}}</a>
                                   </div>
                              {{/each}} 
                                   <div class="nav-item">
                                        <a href="#" class="nav-link disabled">Disabled</a>
                                   </div> 
                        {{/with}} 
                     </div>
               </div> 
          </div>
    <section class="ms-4">
     
                   
               {{#with formBlock}}
                <div class="row">
                <div class="col-8">
                      <h2>{{header}}</h2>
                      {{#with rating}}
                              <p>{{title}}: {{value}}</p>
                      {{/with}}
                      {{#with actionBlock}}
                        <div class="nav nav-tabs mt-4">
                         
                              {{#each tabs}}
                                       
                               
                              {{#if isActive}}
                                      <div class="nav-item">
                                   <a href="#" class="nav-link active">{{text}}</a>   
                              </div>
                              {{else}}
                                 <div class="nav-item">
                                   <a href="#" class="nav-link">{{text}}</a>   
                              </div>
                              {{/if}}
                              
                              {{/each}}
                              
                          </div>
                          <hr class="mt-5 mb-5">
                              {{#with report}}
                                       <div class="card mt--5">
                                          <div class="card-body">
                                             <h6>{{title}}</h6>
                                             {{#with button}}
                                                       <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
                                             {{/with}}
                                         </div>
                                        </div>
                              {{/with}}
                          <hr class="mt-5 mb-5">
                      {{/with}}
                      {{#with feedbackBlock}}
                             <h3>{{title}}</h3>
                             {{#each buttons}}
                                     {{#if isWarning}}
                                              <a class="btn btn-warning" href="{{link}}">{{text}}</a>
                                     {{/if}}
                                      {{#if isSuccess}}
                                              <a class="btn btn-success ms-2" href="{{link}}">{{text}}</a>
                                     {{/if}}
                                      {{#if isDanger}}
                                              <a class="btn btn-danger ms-2" href="{{link}}">{{text}}</a>
                                     {{/if}}
                             {{/each}}
                      {{/with}}
                        </div>
                         <div class="col-4">
                             {{#with goodsInfo}}
                                    <div class="card ">
                                          <div class="card-body">
                                                <img class="card-img-top pe-5 pb-4" src="{{photo}}" alt="Product photo">
                                                <h5>{{name}}</h5>
                                        </div>
                                   </div>
                                    <div class="card mt-3">
                                          <div class="card-body ">
                                               <h5>{{price}}</h5>
                                               {{#if inMarket}}
                                               <p>Є в наявності</p>
                                               {{/if}}
                                               {{#each buttons}}
                                                      {{#if isPrimary}}
                                                               <a class="btn btn-primary ms-2" href="{{link}}">{{text}}</a>
                                                      {{/if}}
                                                      <br>
                                                       {{#if isSecondary}}
                                                               <a class="btn btn-secondary ms-2" href="{{link}}">{{text}}</a>
                                                      {{/if}}
                                               {{/each}}
                                        </div>
                                   </div>
                                    <div class="card  mt-3">
                                          <div class="card-body">
                                              {{#with seller}}
                                                      <p class="me-3">{{title}}: <h6>{{value}}</h6></p>
                                              {{/with}}
                                        </div>
                                   </div>
                             {{/with}}
                        </div>
                        
                       
                  </div>
                 
               {{/with}}
               
               <hr class="mt-5">
                 <div class="col-12">
                 <div class="card ">
                     <div class="row">
                          <div class="card-body">
                              
                              {{#each reviewList}}
                                          {{#if @first}}
                                        <div class="card ">
                                              <div class="card-body">
                                               
                                                  {{#with title}}
                                                         <h6>{{userName}}</h6>
                                                         <p>{{caption}}</p>
                                                         <p>{{date}}</p>
                                                         <hr>
                                                  {{/with}}
                                                  {{#with reviewBody}}
                                                          {{#with seller}}
                                                                  <p>{{title}}:{{value}}</p>
                                                          {{/with}}
                                                           {{#with rating}}
                                                            <p>{{title}}:{{value}}</p>
                                                          {{/with}}
                                                          <p>{{text}}</p>
                                                          {{#with advantages}}
                                                                <h6>{{title}}:</h6>
                                                                <p>{{text}}</p>
                                                          {{/with}}
                                                          {{#with disadvantages}}
                                                                <h6>{{title}}:</h6>
                                                                <p>{{text}}</p>
                                                          {{/with}}
                                                           <div class="row">
                                                         {{#each images}}                                                            
                                                             <div class="col-1">
                                                                  <img class="card-img-top" src="{{this}}" alt="Product photo">      
                                                            </div>
                                                            {{/each}}
                                                            {{#each coments}}
                                                                     <div class="card mt-4 col-11 ms-5 ">
                                                                          <div class="card-body ">
                                                                                <h5>{{userName}}</h5>
                                                                                <p>{{date}}</p>
                                                                                <p>{{text}}</p>
                                                                           </div>
                                                                      </div>
                                                            {{/each}}
                                                  {{/with}}
                                                 
                                             </div>
                                        </div>
                                        {{/if}}
                                          {{#if @last}}
                                        <div class="card ">
                                              <div class="card-body">
                                               
                                                  {{#with title}}
                                                         <h6>{{userName}}</h6>
                                                         <p>{{caption}}</p>
                                                         <p>{{date}}</p>
                                                         <hr>
                                                  {{/with}}
                                                  {{#with reviewBody}}
                                                          {{#with seller}}
                                                                  <p>{{title}}:{{value}}</p>
                                                          {{/with}}
                                                           {{#with rating}}
                                                            <p>{{title}}:{{value}}</p>
                                                          {{/with}}
                                                          <p>{{text}}</p>
                                                          {{#with advantages}}
                                                                <h6>{{title}}:</h6>
                                                                <p>{{text}}</p>
                                                          {{/with}}
                                                          {{#with disadvantages}}
                                                                <h6>{{title}}:</h6>
                                                                <p>{{text}}</p>
                                                          {{/with}}
                                                           <div class="row">
                                                         {{#each images}}                                                            
                                                             <div class="col-1">
                                                                  <img class="card-img-top" src="{{this}}" alt="Product photo">      
                                                            </div>
                                                            {{/each}}
                                                            {{#each coments}}
                                                                     <div class="card mt-4 col-11 ms-5 ">
                                                                          <div class="card-body ">
                                                                                <h5>{{userName}}</h5>
                                                                                <p>{{date}}</p>
                                                                                <p>{{text}}</p>
                                                                           </div>
                                                                      </div>
                                                            {{/each}}
                                                  {{/with}}
                                                 
                                             </div>
                                        </div>
                                        {{/if}}
                                        
                                        
                              {{/each}}

                         </div>
               </div>
               </div>
             

             
             
     </section>
          
          
       {{#with service}}
                       <div class="card col-12 ms-3">
                         <div class="card-body text-bg-success text-center">
                              <h2>{{title}}</h2>
                              <p class="mt-3">{{description}}</p>
                                   {{#each buttons}}
                                   <div class="row">
                                        <div class="text-center">
                                             <a class="btn btn-primary " href="{{link}}">{{text}}</a>
                                        </div>
                                   </div>
                                   {{/each}}
                         </div>
                       </div>
               {{/with}}
          



 <hr class="mt-5">

          <div>     
                 <div class="nav">
                     {{#each footer}}
                         <div class="nav-item">
                              {{#each this}}  
                                   {{#if @last}}
                                        <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                                   {{else}}
                                        <a href="{{link}}" class="nav-link active">{{text}}</a>
                                   {{/if}}
                              {{/each}}
                         </div>
                     {{/each}}
          </div>
       
</main>